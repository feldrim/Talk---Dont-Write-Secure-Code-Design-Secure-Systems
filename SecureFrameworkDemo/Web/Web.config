	<!-- the Row Level Security part of the app requires SQL Server 2016. If you want to run this on SQL Express, disable RLS here -->
	<add key="EnableRowLevelSecurity" value="true" />
  </appSettings>

	<!-- 
		Specify URL patterns that are accessible without a login. 
		
		This basically assumes that the vast majority of pages will be private so it makes the site "secure by default";
		unless a URL explicitly matches the whitelist below, it will require authentication.
    
		This has a couple of benefits:
		
		1) Developers don't need to do anything special to make a page private; it only requires extra effort if they
		   want something to be PUBLIC.
		   
		2) All of the public URLs are centralized in a single place
       
		3) If you have custom authentication that requires on data being in session, then it's possible for a user
		   to have a valid FormsAuth token (meaning ASPNET thinks you've authenticated) but an empty session (meaning the
		   app does NOT think you've authenticated). Using this system as a replacement for [Authorize] avoids that complexity
	-->
	<customAuthentication>
		<pathsAccessibleWithoutLogin>
			<!-- NOTE: regexs are case insensitive -->
			<!-- static resources -->
			<add regex="^/robots.txt" />
			<add regex="^/Content/" />
			<add regex="^/Scripts/" />
			<!-- the entire Account controller is public -->
			<add regex="^/Account/" />
			<!-- the entire AutoLogin controller is public -->
			<add regex="^/AutoLogin/" />
			<!-- the default index page is public -->
			<add regex="^/$" />
			<!-- the "index" action for the secure framework demo -->
			<add regex="^/SecureFramework/Index" />
			<add regex="^/SecureFramework/$" />
			<add regex="^/SecureFramework$" />
			<!-- exclude the "insecure" and "secure feature" areas, so that they can demo their own auth approaches -->
			<add regex="^/Insecure" />
			<add regex="^/SecureFeature" />
		</pathsAccessibleWithoutLogin>
	</customAuthentication>

	<system.web>
    <authentication mode="None" />
    <compilation debug="true" targetFramework="4.5.2" />
    <httpRuntime targetFramework="4.5.2" />
  </system.web>
  <system.webServer>
    <modules runAllManagedModulesForAllRequests="false">
      <!-- this module enforces the authentication rules specified in the "customAuthentication" section -->
      <add name="PrivateByDefaultAuthModel" type="SecureFrameworkDemo.Framework.WebPageAuthentication.PrivateByDefaultAuthModule" />
 	  <remove name="FormsAuthentication" />
	</modules>
    <handlers>
