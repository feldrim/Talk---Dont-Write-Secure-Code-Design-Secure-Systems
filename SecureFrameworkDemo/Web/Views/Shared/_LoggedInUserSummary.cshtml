@{ 
	var isLoggedIn = (this.CurrentUser != null);
}

@if (isLoggedIn) {
	<div class="alert alert-info" role="alert">
		You are logged in as <b>@CurrentUser.UserName</b> with permissions: <b>@CurrentUser.PermissionEnums.Select(x => x.ToString()).Join(", ")</b>
	</div>
}
else {
	<div class="alert alert-warning" role="alert">
		You are not logged in
	</div>
}

